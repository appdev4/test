<!-- views/pages/index.ejs -->

    <% include ../partials/head %>

<body class="container">
    
    <% include ../partials/header %>
   	 
     <div class="register-container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
							    <a href="#" class="<%= locals.register ? '' : 'active' %>" id="login-form-link">Login</a>
							</div>
							<div class="col-xs-6">
								<a href="#" class="<%= locals.register ? 'active' : '' %>" id="register-form-link">Register</a>
							</div>
							<hr>
							<% if(locals.warning){ %>
							   <div class="alert alert-danger alertstyle" role="alert">
						       <%= locals.warning %>
						       </div>
						    <% } %>
						</div>
					   
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
							<!--  -->
					
							   <form id="recover-form" action="/sent-recover" method="post" role="form"  onsubmit="return submitEnabled;"style="display:none;">
									<div class="form-group">
										<input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email" value="<%= locals.email ? locals.email : '' %>">
									</div>
									
									<div class="form-group">
										<div class="g-recaptcha" data-sitekey="<%= locals.recaptchaKey %>" data-callback="enableSubmit"></div>
									</div>
									
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="recover-submit" id="recover-submit" tabindex="4" class="form-control btn btn-login" value="Recover">
											</div>
										</div>
									</div>
									
								</form>
								
								<form id="login-form" action="/login" method="post" role="form" style="<%= locals.register ? 'display:none;' : 'display:block;' %>">
									<div class="form-group">
										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="<%= locals.username ? locals.username : '' %>">
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">
									</div>
									<div class="form-group text-center">
										<input type="checkbox" tabindex="3" class="" name="remember" id="remember">
										<label for="remember"> Remember Me</label>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
													<a href="#" tabindex="5" class="forgot-password" id = "recover-form-link">Forgot Password?</a>
												</div>
											</div>
										</div>
									</div>
								</form>
								<form id="register-form" action="/register" method="post" role="form" style="<%= locals.register ? 'display:block;' : 'display:none;' %>">
									<div class="form-group">
										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="<%= locals.username ? locals.username : '' %>">
									</div>
									<div class="form-group">
										<input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="<%= locals.email ? locals.email : '' %>">
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">
									</div>
									<div class="form-group">
										<input type="password" name="confirmpassword" id="confirmpassword" tabindex="2" class="form-control" placeholder="Confirm Password">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	
	         
    <% include ../partials/footer %>
 
<script src="http://code.jquery.com/jquery-1.11.1.js"></script>
<script> 

    $('#login-form-link').click(function(e) {
        
		$("#login-form").delay(100).fadeIn(100);
 		$("#register-form ,#recover-form").fadeOut(100);
		$('#register-form-link , #register-form-link').removeClass('active');
		$(this).addClass('active');
		
		e.preventDefault();
	});
	$('#register-form-link').click(function(e) {
	
		$("#register-form").delay(100).fadeIn(100);
 		$("#login-form , #recover-form").fadeOut(100);
		$('#login-form-link , #recover-form-link').removeClass('active');
		$(this).addClass('active');
		e.preventDefault();
	});
	
	$('#recover-form-link').click(function(e) {
		
		$("#recover-form").delay(100).fadeIn(100);
 		$("#login-form , #register-form").fadeOut(100);
		$('#login-form-link , #register-form-link').removeClass('active');
		$(this).addClass('active');
	    e.preventDefault();
     });
	
</script>

</body>
</html>
