<!-- views/pages/account.ejs-->
<% include ../partials/head %>

<body class="container">
 <% include ../partials/header %>
 <div class="row">
  <% include ../partials/menuopen %>
   
   <div class="col-sm-9">
    <div class="well">
    
     <h1>Deposit Bitcoin to site</h1>
     <div class="input-group">
      <span class="input-group-addon">Deposit Address</span>
      <span class="form-control depositaddress"><%= deposit_address%></span>
     </div>
     
      <div class="paragraphs">
      <div class="row">
       <div class="span4" >
        <div style="float:left; padding-right:22px;" >
         <img  style="border-style: solid; border-width:5px; border-color: white; margin-left:16px;" src="https://blockchain.info/qr?data=<%= deposit_address%>&size=150"/>
        </div>
        <div class="content-heading">
         <h3>QR Code - Scan to get deposit address</h3>
        </div>
        <p style="clear:both lead"> 
      							  Transfer bitcoins to this address to have your account credited. 
						          Accounts are only credited after one bitcoin confirmation which depending on external factors can take a while. 
						          You can <a href = "https://blockchain.info/address/<%= deposit_address%>" >check your deposit at blockchain.info</a> 
						          to see if your transactions have confirmed yet.
		<p>
	   </div>
      </div>
     </div>
     
     <h1>Account Information</h1>
      <div class="panel panel-default">
       <div class="panel-heading">Info</div>
       <table class="table">
        <tr class="something">
         <td class="col-md-2">Deposits</td>
         <td class="col-md-3">Withdrawals</td>
         <td class="col-md-6">Profit</td>
        </tr>
       </table>
      </div>
          
    </div>
   </div>
  
 </div>
 <% include ../partials/footer %>
</body>
</html>

