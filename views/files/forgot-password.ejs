<!-- views/pages/account.ejs-->
<% include ../partials/head %>

<body class="container">
 <% include ../partials/header %>
 <div class="row">
  <% include ../partials/menuopen %>
   
   <div class="col-sm-9">
    <div class="well">   
     <h1>Deposit Bitcoin to site</h1>
      
      <script src='https://www.google.com/recaptcha/api.js'></script>
		<script>
			var submitEnabled = false;
			function enableSubmit() {
				submitEnabled = true;
				var s = document.getElementById('forgotSubmit');
				s.style.display = 'block';
			}
		</script>
		<div class="">
		    <form action="/sent-recover" method="post" onsubmit="return submitEnabled;">
		        <div class="row">
		            <div class="large-6 large-offset-2 columns">
		                <label>Enter your email
		                    <input type="email" name="email" required/>
		                </label>
		            </div>
		        </div>
			    <div class="row">
				    <div class="g-recaptcha" data-sitekey="<%= locals.recaptchaKey %>" data-callback="enableSubmit"></div>
			    </div>
			    <div class="row">
				    <div class="large-12 columns">
					    <input  id="forgotSubmit" style="display: none" class="border-button right blue" type="submit" value="Submit"/>
				    </div>
			    </div>
		    </form>
		</div>

   
    
    </div>
   </div>
  </div>
  <% include ../partials/footer %>
 </body>
</html>


